@using WebMVC.Models.Entity;
@model List<AboutImage>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-2">
    <h2 style="text-align:center">Hakkimda Sayfasi Resimleri</h2>
    <hr />
    <br />
    <button class="btn btn-outline-primary" style="width: 10%" data-toggle="modal" data-target="#Modal1">Resim Ekle</button>

    <table class="table table-bordered">
        <thead>
            <tr style="text-align:center">
                <th>ID</th>
                <th>Resim</th>
                <th>Durum</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr style="text-align:center">
                    <td>@item.Id</td>
                    <td><img src="~/image/@item.ImageName" width="150" height="75" alt="Alternate Text" /></td>
                    <td>@item.ImageStatus</td>
                    <td><a href="/AboutImages/AboutImageDelete/@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a></td>
                    <td><a href="/AboutImages/AboutImagePassive/@item.Id" class="btn btn-primary btn-warning" style="width:20em"><b><i class="fas fa-lock"></i>  Pasif Yap</b></a>
                    <a href="/AboutImages/AboutImageActive/@item.Id" class="btn btn-primary btn-info" style="width:20em"><b><i class="fas fa-lock-open"></i>  Aktif Et</b></a></td>
                </tr>
            </tbody>
        }

    </table>

    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" style="padding-left: 5em "> Resim Ekle </h2>
                </div>
                <form method="post" action="/AboutImages/AboutImageAdd/">
                    <div class="modal-body">

                        <label> Resim Ekle</label>
                        <input type="file" name="ImageName" class="custom-file-control" />
                        <br />

                        <button class="btn btn-info"> Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

