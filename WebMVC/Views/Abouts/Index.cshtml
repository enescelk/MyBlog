@using WebMVC.Models.Entity
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <a href="/Abouts/AboutAdd/"><button class="btn btn-outline-info" style="width:10%">Ekle</button></a>

    @foreach (var about in Model)
    {

        <div class="card mt-2">
            <div class="container">
                <div class="card-header">
                    <div style="float:left" class="user-block">
                        <span class="username">
                            <a href="#">@about.FirstName - @about.LastName</a>
                        </span>
                        <span class="description pl-2">@about.PhoneNumber - @about.Addres</span>
                    </div>
                </div>
                <!-- /.user-block -->
                <div class="card-body">
                    <p style="text-align:center">
                        @about.Description
                    </p>
                </div>
                <p>
                    <a href="#" style="font-size:20px; float:right">@about.Email</a>
                </p>
            </div>
            <div class="card-footer">
                <a href="/Abouts/AboutDelete/@about.Id"><button class="btn btn-outline-danger" style="float: right; width: 10%">Sil</button></a>
                <a href="/Abouts/AboutUpdate/@about.Id"><button class="btn btn-outline-warning" style="float: right; width: 10%; margin-right: 1em">Duzenle</button></a>
            </div>
        </div>


    }

</div>

