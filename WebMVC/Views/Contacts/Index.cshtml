@using WebMVC.Models.Entity;
@model List<Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-solid">
    <div class="card-header">
        <h2 style="text-align:center"> Mesajlar </h2>
    </div>
    @foreach (var contact in Model)
    {
        <div class="card-body pb-0" style="display:inline-block">
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            @contact.ContactDate
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@contact.ContactFirstName - @contact.ContactLastName</b></h2>
                                    <p class="text-muted text-sm"><b> @contact.ContactSubject: </b>@contact.ContactDescription </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-mail-bulk"></i></span> Email: @contact.ContactEmail</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="/Contacts/ContactDelete/@contact.Id" style="width:20%" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    }
    <!-- /.card-body -->
</div>

