@model WebMVC.Models.Entity.Category

@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin: 5em auto" class="container">
    <h2 style="text-align:center">K A T E G O R I G U N C E L L E</h2>
    <hr />
    <form class="form-group" method="post">

        @Html.Label("ID")
        @Html.TextBoxFor(c => c.CategoryID, new { @class = "form-control disabled" })

        <br />
        @Html.Label("Category Name")
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })

        <br />
        @Html.Label("Description")
        @Html.TextBoxFor(c => c.Description, new { @class = "form-control" })


        <br />
        <button type="submit" style="width: 100%; font-size:20px" class="btn btn-info"><i class="fas fa-wrench"></i> Guncelle</button>
    </form>


</div>

