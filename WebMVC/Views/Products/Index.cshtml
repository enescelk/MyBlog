@using WebMVC.Models.Entity
@model List<Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <h2 style="text-align:center">Deneyimlerim</h2>
    <hr />
    <br />
    <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1" style="width:12%"><i class="fas fa-plus"></i> EKLE</button>
    <table class=" table table-bordered mt-3">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Category ID</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        @foreach (var product in Model)
        {
            <tbody>
                <tr style="text-align:center">
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.CategoryID</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td><a href="/Products/ProductDelete/@product.ProductID" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a></td>
                    <td><a href="/Products/ProductUpdate/@product.ProductID" class="btn btn-warning"><i class="fas fa-edit"></i> Duzenle</a></td>
                </tr>
            </tbody>
        }

    </table>

    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" style="padding-left: 2.5em "> Kullanicilara Rol Atama </h2>
                </div>
                <form method="post" action="/Products/ProductAdd/">
                    <div class="modal-body">
                        <label> Kullanici ID</label>
                        <input type="number" name="userId" class="form-control" />
                        <br />

                        <label> Rol ID</label>
                        <input type="number" name="OperationClaimId" class="form-control" />
                        <br />

                        <button class="btn btn-info"> Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>