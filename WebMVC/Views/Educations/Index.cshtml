@using WebMVC.Models.Entity
@model List<Education>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <h2 style="text-align:center">Egitim Hayatim</h2>
    <hr />
    <br />
    <a href="/Educations/EducationAdd/" style="width: 20vh" class="btn btn-primary mb-3"><i class="fas fa-plus"></i> Ekle</a>

    <table class=" table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Okul Adi</th>
                <th>Okul Basligi</th>
                <th>Okul Aciklama</th>
                <th>Not Ortalamasi</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        @foreach (var education in Model)
        {
            <tbody>
                <tr style="text-align:center">
                    <td>@education.Id</td>
                    <td>@education.SchoolName</td>
                    <td>@education.SchoolTitle</td>
                    <td>@education.SchoolDescription</td>
                    <td>@education.GPA</td>
                    <td><a href="/Educations/EducationDelete/@education.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a></td>
                    <td><a href="/Educations/EducationUpdate/@education.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Duzenle</a></td>
                </tr>
            </tbody>
        }

    </table>

</div>

