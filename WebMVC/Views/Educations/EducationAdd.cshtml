@model WebMVC.Models.Entity.Education

@{
    ViewBag.Title = "EducationAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin: 5em auto" class="container">
    <h2 style="text-align:center;">Egitim Ekle</h2>
    <hr />

    <form class="form-group" method="post">

        <br />
        @Html.Label("Okul Ismi")
        @Html.TextBoxFor(x => x.SchoolName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SchoolName, "")

        <br />
        @Html.Label("Okul Basligi")
        @Html.TextBoxFor(x => x.SchoolTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SchoolTitle, "")

        <br />
        @Html.Label("Okul Zamani")
        @Html.TextBoxFor(x => x.SchoolDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SchoolDate, "")

        <br />
        @Html.Label("Okul Not Ortalamasi")
        @Html.TextBoxFor(x => x.GPA, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.GPA, "")

        <br />
        @Html.Label("Okul Aciklama")
        @Html.TextAreaFor(x => x.SchoolDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SchoolDescription, "")



        <br />
        <button type="submit" style="width: 100%; font-size:20px" class="btn btn-info"><i class="fas fa-plus"></i> Ekle</button>
    </form>


</div>
